<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="aquaButton" TargetType="Button">
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="button" Style="{StaticResource aquaButton}" Content="Button" HorizontalAlignment="Left" Height="24" Margin="117,200,0,0" VerticalAlignment="Top" Width="83"/>
        <Button x:Name="button1" Style="{StaticResource aquaButton}" Content="Button" HorizontalAlignment="Left" Height="24" Margin="317,200,0,0" VerticalAlignment="Top" Width="83"/>
        <Button x:Name="button2" Style="{StaticResource aquaButton}" Content="Button" HorizontalAlignment="Left" Height="24" Margin="517,200,0,0" VerticalAlignment="Top" Width="83"/>



    </Grid>
</Window>
